    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Manufacturer" asp-action="Edit" asp-route-id="@Model.ManufacturerId">Back to List</a>
    </form>
</div>
